# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[**.js]
charset = utf-8
indent_style = space
indent_size = 2

[{.firebaserc,firebase.json,firestore.rules,package.json}]
indent_style = space
indent_size = 2

[**.gradle]
charset = utf-8
indent_style = space
indent_size = 4

[**.xml]
charset = utf-8
indent_style = space
indent_size = 4
